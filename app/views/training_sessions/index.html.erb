<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <h1>Training Sessions</h1>
      <div class="table=responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Start time</th>
              <th>Completed?</th>
              <th>Review</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @training_sessions.each do |training_session| %>
              <tr>
                <td><%= training_session.name %></td>
                <td><%= training_session.start_time %></td>
                <td><%= training_session.training_completed %></td>
                <td>
                  <% @reviews.each do |review| %>
                    <div class="reviews">
                      <p>"<%= review.completed %>"</p>
                      <p><%= review.rating %> / 5</p>
                    </div>
                  <% end %>
                </td>
                <td><%= link_to 'Show', training_session %></td>
                <td><%= link_to 'Edit', edit_training_session_path(training_session) %></td>
                <td><%= link_to 'Destroy', training_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>
